

<script type="text/javascript">
	var colors = {
		"Android" : "#a6c73c",
		"iOS" : "#6a6b68",
		"No Data" : "#dddddd"
	};

	for ( i = 0; i < chartData.length; i++) {
		if (colors[chartData[i].label]) {
			chartData[i].color = colors[chartData[i].label];
		}		
	}

	$.plot('#chart-{{index}}', chartData, {
		series : {
			pie : {
				show : true
			}
		},
		legend : {
			show : false
		}
	});

</script>

<div class="block">
	<div class="block-header">
		<div class="block-header-title pull-left">
			{{title}}
		</div>
	</div>

	<div class="container-fluid raw-fluid block-body" >
	 <a href="/mdm/reports/all_reg_devices?dashboard=true&startdate=2000-01-01&enddate={{currentDate}}&platform=0"><div id="chart-{{index}}" style="height: {{height}}; width:{{width}}"> </div> </a>
	</div>

</div>
