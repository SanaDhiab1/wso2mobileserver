<div class="container">
	
	<div class="raw-fluid">
		<ul class="breadcrumb">
			<li>
				<a href="configuration">Users</a><span class="divider">/</span>
			</li>
			<li class="active">
				Edit
			</li>
		</ul>
	</div>
	

	<div class="raw">		

		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Add User
						</div>

					</div>

					<div class="block-body">
						<form class="form-horizontal" data-validate="parsley">
							<div class="control-group">
								<label class="control-label" for="inputFirstName">First Name</label>
								<div class="controls">
									<input type="text" id="inputFirstName" class="input-xxlarge" data-required="true">
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputLastName">Last Name</label>
								<div class="controls">
									<input type="text" id="inputLastName" class="input-xxlarge" data-required="true">
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputEmail">Email</label>
								<div class="controls">
									<input type="text" id="inputEmail" class="input-xlarge" data-trigger="change" data-required="true" data-type="email" >
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputPassword">Password</label>
								<div class="controls">
									<input type="password" id="inputPassword" data-required="true">
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputMobile">Mobile</label>
								<div class="controls">
									<input type="text" id="inputMobile" data-trigger="change" data-required="true" data-type="phone" >
								</div>
							</div>

							<div class="control-group">
								<label class="control-label" for="inputMobile">Group</label>
								<div class="controls raw">
									<div class="span6">
										<select multiple="multiple" size="10" id="inputGroups" name="inputGroups" class='duallistbox'>
											{{#data.groups}}
												<option value="{{id}}">{{name}}</option>
											{{/data.groups}}											
											
										</select>
									</div>

								</div>
							</div>

							<hr>
							<div class="offset10">
								<a class="btn btn-orange btn-large" id="btn-add" href="#" >Add</a>
							</div>

						</form>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>
